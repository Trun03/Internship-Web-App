@model WebApplication4.Pro

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <title>Web Application</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        .header-image {
            text-align: center;
        }

            .header-image img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            font-size: 16px;
            color: #333;
        }

        .form-control {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-save {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

            .btn-save:hover {
                background-color: #0056b3;
            }

        .text-danger {
            color: red;
        }

        .btn-back {
            color: #333;
            font-size: 16px;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 10px;
        }

            .btn-back:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body style="background-color: #f2f2f2;">
    <div class="container">
        <h2>
            Edit
        </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.namepj, "Name of the project", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.namepj, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.namepj, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="btn-save" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-back" })
        </div>
    </div>
</body>
</html>