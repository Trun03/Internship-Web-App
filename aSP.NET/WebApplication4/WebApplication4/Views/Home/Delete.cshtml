}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.namepj)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.namepj)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

